<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:id="@+id/facesnack"
    android:layout_marginBottom="45dp"
    tools:context=".HomeFragment">


    <FrameLayout
        android:background="@drawable/topheader_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:text="Your ticket in"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textSize="28dp"
            android:layout_marginLeft="20dp"
            android:layout_gravity="center|left"
            android:layout_marginBottom="45dp"
            android:layout_height="wrap_content" />


        <TextView
            android:layout_width="wrap_content"
            android:text="Select a face below or add a new one"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textSize="16dp"
            android:layout_marginLeft="20dp"
            android:layout_gravity="center|left"
            android:layout_marginBottom="0dp"
            android:layout_height="wrap_content" />



    </FrameLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/facerecy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center|left"
        android:layout_marginTop="-70dp"
        android:orientation="horizontal"

        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:background="@drawable/face_cardbox"
        android:layout_marginTop="0dp"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <EditText
            android:layout_width="wrap_content"
            android:background="@drawable/namebox"
            android:id="@+id/faceditext"
            android:drawableLeft="@drawable/user_icon"
            android:paddingLeft="15dp"
            android:textColor="@android:color/white"
            android:hint="Name"
            android:textColorHint="#E9F5FF"
            android:drawablePadding="15dp"
            android:layout_marginTop="15dp"
            android:layout_gravity="center"

            android:layout_height="wrap_content" />


        <ImageView
            android:layout_width="wrap_content"
            android:id="@+id/faceimg"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:background="@drawable/default_face"/>
        <TextView
            android:layout_width="wrap_content"
            android:text="Add photo"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:textStyle="bold"
            android:textColor="#A3A3A3"
            android:layout_height="wrap_content" />


        <Button
            android:id="@+id/addface"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_gravity="center"

            android:layout_marginTop="0dp"
            android:background="@drawable/checkoutbtn"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:text="Add face"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="18dp" />
        
    </LinearLayout>

</LinearLayout>